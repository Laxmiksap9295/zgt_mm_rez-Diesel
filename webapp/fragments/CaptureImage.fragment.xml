		<!-- ðŸ”¹ FileUploader -->
   <u:FileUploader
    id="idFileUploader"
    buttonText="{i18n>UploadAttachments}"
    buttonOnly="true"
    sendXHR="true"
    multiple="false"
    change=".onFileChange"
    useMultipart="false"
    sameFilenameAllowed="true"
    width="100%"
/>

 <List id="idImageList" mode="Delete" items="{MASS>/}" delete=".onFileDeleted" class="sapUiTinyMarginBegin">
    <!-- <StandardListItem title="{MASS>Fname}" type="Active" press=".onFilePreview" /> -->
    <CustomListItem>
     <HBox justifyContent="SpaceBetween" alignItems="Center">
      <!-- ðŸ”¹ Blue clickable file name -->
      <Link text="{MASS>Fname}" press=".onFilePreview" class="sapUiTinyMarginEnd" />

      <!-- ðŸ”¹ Optional: delete icon appears automatically in Delete mode -->
     </HBox>
    </CustomListItem>
   </List>

	<!-- added by srinivas -->
  <VBox id="previewContainer" visible="false" class="sapUiSmallMargin">
        <HBox alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
          <Title id="previewTitle" level="H3" text="Preview" />
          <Button
            icon="sap-icon://decline"
            type="Transparent"
            press=".onClosePreview"
            tooltip="Close Preview"
          />
        </HBox>
        <Image
          id="imagePreview"
          decorative="false"
          width="30rem"       
    height="15rem"   
   
    style="object-fit: contain; border: 1px solid #ccc; background-color: #f8f8f8;"
        />
      </VBox>

